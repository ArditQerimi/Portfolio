<div class="navigate-container">
    <h1 class="navigate-name">MY PROJECTS</h1>
    <ul class="navigate-links ">
        <li><a href="/" class="navigate-link ">HOME</a></li>
        <li class="slash"> / </li>
        <li><a href="/projects" class="navigate-link">PROJECTS</a></li>
    </ul>
</div>


<div class="card-big-container">
    <% if (typeof projects !=='undefined' && projects.length> 0) { %>
        <% projects.forEach((project)=> { %>
            <div class="card-container">
                <a class="card-link" href="/projects/<%- project.id %>">

                    <div class="card-image-container">
                        <img class="card-img" src="<%= project.imageUrl %>" alt="<%= project.title %>" />
                    </div>
                    <div class="card-description-container">
                        <h2>
                            <%=project.title %>
                        </h2>
                        <div class="techs">
                            <% project.description.forEach((tech)=> { %>
                                <div class="tech">
                                    <%= tech %>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                    <div class="git-link">
                        <img src="https://img.icons8.com/ios-glyphs/30/000000/github.png" />
                        <a class="source-anchor" href="<%= project.gitUrl  %>  " target="_blank">
                            <div class="source-code">Source Code</div>
                        </a>
                    </div>
                </a>
            </div>
            <% }) %>
                <% } %>
</div>